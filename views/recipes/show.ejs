<%- include('../partials/header.ejs') %>
    <div class="recipe-card">
        <h2>
            <%= recipe.recipeName %>
        </h2>
        <p>
            <span class="bold">Cooking Time:</span>
            <%= recipe.cookingTime %>
                <span class="bold">Prep Time:</span>
                <%= recipe.prepTime %>
        </p>
        <p class="bold">Ingredients:</p>
        <% recipe.ingredients.forEach(ingredient => { %>
            <ul>
                <li>
                    <a href="/recipe/<%= recipe.id %>/ingredients/<%= ingredient.id %>">
                        <%= ingredient.ingredientName %>
                            <%= ingredient.amount %>
                    </a>
                </li>
            </ul>
            <% }) %>
                <p class="instructions">
                    <span class="bold">Instructions:</span>
                    <%= recipe.instructions %>
                </p>
    </div>
    <div class="edit">
        <p>
            <a class="submit" href="/recipe/<%= recipe.id %>/ingredients/new">Add Ingredients</a>
        </p>
        <p>
            <a class="edit submit" href="/edit/<%= recipe.id %>"> Edit Recipe </a>
        </p>
    </div>
<%- include('../partials/footer.ejs') %>